<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/registerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="âœ“"
        android:id="@+id/sendRegister"
        android:textColor="#fff"
        android:background="@drawable/circle2"
        android:layout_gravity="right"
        android:layout_below="@+id/confirmation"
        android:layout_alignRight="@+id/confirmation"
        android:layout_alignEnd="@+id/confirmation"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="@color/mainColorLight"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/pseudo"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="@color/mainColorLight"
        android:ems="10"
        android:id="@+id/email"
        android:hint="Email"
        android:layout_below="@+id/pseudo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="@color/mainColorLight"
        android:ems="10"
        android:id="@+id/password"
        android:hint="password"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="@color/mainColorLight"
        android:ems="10"
        android:hint="password confirmation"
        android:id="@+id/confirmation"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

</RelativeLayout>